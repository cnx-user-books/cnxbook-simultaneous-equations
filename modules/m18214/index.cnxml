          </m:mrow>
          <m:annotation encoding="StarMath 5.0"> size 12{ matrix {
2y - 5x=7 {} ##
4y+"15"x=9
} } {}</m:annotation>
        </m:semantics>
      </m:math>
    </entry>
    <entry>
      <m:math>
        <m:semantics>
          <m:mrow>
            <m:mstyle fontsize="12pt">
              <m:mrow>
                <m:mtable>
                  <m:mtr>
                    <m:mtd>
                      <m:mrow>
                        <m:mrow>
                          <m:mn>2y</m:mn>
                          <m:mo stretchy="false">−</m:mo>
                          <m:mtext>10</m:mtext>
                        </m:mrow>
                        <m:mrow>
                          <m:mi>x</m:mi>
                          <m:mo stretchy="false">=</m:mo>
                          <m:mn>7</m:mn>
                        </m:mrow>
                        <m:mrow/>
                      </m:mrow>
                    </m:mtd>
                  </m:mtr>
                  <m:mtr>
                    <m:mtd>
                      <m:mrow>
                        <m:mrow>
                          <m:mn>4y</m:mn>
